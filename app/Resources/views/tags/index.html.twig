{% extends 'base-uikit-no-sidebar.html.twig' %}
{% block title %}Tags{% endblock %}
{% block body %}
    <h1 class="page-title">Tags</h1>
    <table class="uk-table uk-table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Posts tagged</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td><a href="{{ path('tags_show', { 'id': tag.id }) }}">{{ tag.name }}</a></td>
                <td>{{ tag.theCount }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% for tp in tags_paginator %}
        {{ tp.name }} -- {{ tp.theCount }}
    {% endfor %}
{% endblock %}
