{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gist</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gist.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ gist.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ gist.body }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('gist_edit', { 'id': gist.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
