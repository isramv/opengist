{% block body %}
  <p></p>
  <nav class="uk-navbar">
    <ul class="uk-navbar-nav">
      <li>
        <a href="{{ path('gist_index') }}">Back to the list</a>
      </li>
    </ul>
  </nav>
  <hr>
  <div class="uk-block uk-block-muted">
    <div class="uk-container">
      <p>Are you sure you want to delete: <strong>{{ gist.title }}</strong></p>
