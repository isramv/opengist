{% extends 'base-uikit-no-sidebar.html.twig' %}

{% form_theme form 'uikit/fields.html.twig' %}

{% block body %}
    <nav class="uk-navbar">
        <ul class="uk-navbar-nav">
            <li>
                <a href="{{ path('gist_index') }}">Back to the list</a>
            </li>
        </ul>
    </nav>
    <p>New Gist</p>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="uk-grid">
        <div class="uk-width-3-10">
            <div class="uk-form-row">
                {#{{ form_label(form.title) }}#}
                {{ form_errors(form.title) }}
                {{ form_widget(form.title) }}
            </div>
            <div class="uk-hidden">
                {{ form_label(form.body) }}
                {{ form_errors(form.body) }}
                {{ form_widget(form.body) }}
            </div>
        </div>
        <div class="uk-width-10-10">
            <div id="epiceditor"></div>
        </div>
    </div>
    <div class="uk-width-10-10">
        <ul class="uk-list uk-display-inline">
            <li class="uk-display-inline-block"><input type="submit" class="uk-button" value="Save" /></li>
            <li class="uk-display-inline-block"></li>
        </ul>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("bower_components/EpicEditor/epiceditor/js/epiceditor.js") }}"></script>
    <script>
        $(document).ready(function() {
            console.log('ready.');
            opts = {
                container: 'epiceditor',
                textarea: 'gist_body',
                basePath: 'http://myapp.local/bower_components/EpicEditor/epiceditor',
                theme: {
                    base: '/themes/base/epiceditor.css',
                    preview: '/themes/preview/preview-light.css',
                    editor: '/themes/editor/epic-light.css'
                },
                button: {
                    preview: false,
                    fullscreen: false,
                    bar: "auto"
                },
                autogrow: true,
                clientSideStorage: false
            };
            editor = new EpicEditor(opts).load();
        });
    </script>

{% endblock %}


