{% extends 'base-uikit-no-sidebar.html.twig' %}

{% form_theme edit_form 'uikit/fields.html.twig' %}

{% block body %}
    <p></p>
    <nav class="uk-navbar">
        <ul class="uk-navbar-nav">
            <li>
                <a href="{{ path('gist_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('gist_confirm_delete', { 'id': gist.id }) }}">Delete</a>
            </li>
        </ul>
    </nav>
    <p></p>
    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}
        <div class="uk-form-row">
            {{ form_errors(edit_form.title) }}
            <strong>Editing:</strong> {{ form_widget(edit_form.title) }}
        </div>
        <div class="uk-hidden">
            {{ form_label(edit_form.body) }}
            {{ form_errors(edit_form.body) }}
            {{ form_widget(edit_form.body) }}
        </div>
        <div class="uk-form-row">
            {#{{ form_label(edit_form.tags) }}#}
            {{ form_errors(edit_form.tags) }}
            {{ form_widget(edit_form.tags) }}

            {% for tagField in edit_form.tags %}
                {{  dump(tagField) }}
            {% endfor %}

            {#{{ dump(edit_form.tags) }}#}
            {#{% for tagField in edit_form.tags %}#}
                {#<li>#}
                    {#{{ form_errors(tagField) }}#}
                    {#{{ form_widget(tagField) }}#}
                {#</li>#}
            {#{% endfor %}#}
        </div>
        <hr>
        <div id="epiceditor"></div>
        <p><input type="submit" class="uk-button uk-button-large" value="Save" /></p>
    {{ form_end(edit_form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("bower_components/EpicEditor/epiceditor/js/epiceditor.js") }}"></script>
    <script>
        $(document).ready(function() {
            console.log('ready.');
            opts = {
                container: 'epiceditor',
                textarea: 'gist_body',
                basePath: 'http://myapp.local/bower_components/EpicEditor/epiceditor',
                theme: {
                    base: '/themes/base/epiceditor.css',
                    preview: '/themes/preview/preview-light.css',
                    editor: '/themes/editor/epic-dark.css'
                },
                button: {
                    preview: false,
                    fullscreen: false,
                    bar: "auto"
                },
                autogrow: true
            };
            editor = new EpicEditor(opts).load();
        });
    </script>

{% endblock %}


